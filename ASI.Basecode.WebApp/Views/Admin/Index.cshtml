@model IEnumerable<ASI.Basecode.Data.Models.Admin>

@{
    ViewData["Title"] = "Room Index";
    var searchQuery = Context.Request.Query["search"];
}
<br />

<h1 class="fw-bold mb-3">Admins</h1>
<div class="d-flex justify-content-between align-items-center mb-3">
    <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#creatAdminModal">Add Room</button>
    <form class="d-flex" method="GET">
        <input class="form-control me-2" type="search" placeholder="Search admins" aria-label="Search" name="search" value="@searchQuery">
        <button class="btn btn-outline-dark" type="submit">Search</button>
    </form>
</div>

<div class="modal fade" id="creatAdminModal" tabindex="-1" aria-labelledby="creatAdminModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="creatAdminModalLabel">Create New Admin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="createAdmin" method="post">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Admin Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="Password" name="Password" required>
                    </div>
                    <button type="submit" class="btn btn-success">Create Admin</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped mt-3 align-middle">
        <thead>
            <tr>
                <th>Admin ID</th>
                <th>Admin Name</th>
                <th>Admin Email</th>
                <th>Role</th>
                <th>Admin Password</th>
                <th class="action-column">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model)
            {
                <tr>
                    <td>@admin.AdminId</td>
                    <td>@admin.Name</td>
                    <td>@admin.Email</td>
                    <td>@admin.Role</td>
                    <td>@admin.Password</td>
                    <td>
                        <a asp-controller="Admin" asp-action="Update" asp-route-adminId="@admin.AdminId" class="btn btn-outline-secondary btn-sm">Edit</a>
                        <a asp-controller="Admin" asp-action="Delete" asp-route-adminId="@admin.AdminId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this room?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
